<?xml version="1.0" encoding="UTF-8"?>

<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
         version="2.5">

	<display-name>${project.version}</display-name>

    <context-param>
        <param-name>useMDCLogging</param-name>
        <param-value>true</param-value>
    </context-param>
    <context-param>
        <param-name>allowUseOriginalMessage</param-name>
        <param-value>false</param-value>
    </context-param>
    <context-param>
        <param-name>routeBuilder</param-name>
        <param-value>it.imolinfo.cura.tubo.TuboRouteBuilder</param-value>
    </context-param>
    <listener>
        <listener-class>org.apache.camel.component.servletlistener.SimpleCamelServletContextListener</listener-class>
    </listener>

	<servlet>
		<!-- DO NOT CHANGE this servlet-name, otherwise some bindings will break -->
		<servlet-name>CamelServlet</servlet-name>
		<servlet-class>org.apache.camel.component.servlet.CamelHttpTransportServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>CamelServlet</servlet-name>
		<url-pattern>/*</url-pattern>
	</servlet-mapping>
</web-app>
